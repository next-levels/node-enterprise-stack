{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "downlevelIteration": true,
    "noImplicitOverride": true,
    "useDefineForClassFields": false,
    "noImplicitAny": false,
    "lib": ["ES2022", "dom"],
    "strict": true,
    "strictPropertyInitialization": false,
    "strictNullChecks": false,
    "strictBindCallApply": false,
    "exactOptionalPropertyTypes": false,
    "paths": {
      "@next-stack/data-models": ["data-models/src/index.ts"],
      "@next-levels/next-framework": ["next-framework/src/index.ts"],
      "assert": ["./node_modules/assert"],
      "fs": ["./node_modules/browserify-fs"],
      "timers": ["./node_modules/timers-browserify"],
      "crypto": ["./node_modules/crypto-browserify"],
      "http": ["./node_modules/stream-http"],
      "https": ["./node_modules/https-browserify"],
      "querystring": ["./node_modules/querystring-es3"],
      "path": ["./node_modules/path-browserify"],
      "zlib": ["./node_modules/browserify-zlib"],
      "util": ["./node_modules/util/"],
      "os": ["./node_modules/os-browserify/browser"],
      "url": ["./node_modules/url/"],
      "stream": ["./node_modules/stream-browserify"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
